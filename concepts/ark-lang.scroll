 // binding to printf
 [c] func printf(fmt: ^u8, ...);
 
 pub func main(argc: int, argv: ^^u8) -> int {
     // accessed via the C module
     C::printf(c"Running %s\n", ^argv);
 
     // mutable i, type inferred
     mut i := 0;
 
     for i < 5 {
         C::printf(c"%d\n", i);
 
         i += 1;
     }
     return 0;
 }
 

