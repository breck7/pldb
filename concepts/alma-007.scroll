example
 macro swap(a, b) {
     return quasi {
         my t = {{{a}}};
         {{{a}}} = {{{b}}};
         {{{b}}} = t;
     };
 }
 func gcd(a, b) {
     if b {
         return gcd(b, a % b);
     }
     return a.abs();
 }
 my bigger = +prompt("Enter the bigger integer: ");
 my smaller = +prompt("Enter the smaller integer: ");
 if bigger < smaller {
     swap(bigger, smaller);
 }
 say();
 say("Greatest common denominator: ", gcd(bigger, smaller));

