 (load-mod my-module)
 (load "examples/test.slo")
isCaseSensitive true
hasVariadicFunctions true
 (lambda (...) (apply + ...))
hasSwitch true
 (case my-num
   (5 (display "Five!"))
   (0 (display "Zero!"))
   (else (display "Not an option")))
hasZeroBasedNumbering true
hasIncrementAndDecrementOperators false
hasConditionals true
 (if positive? 1 -1)

