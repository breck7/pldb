visualParadigm false

isLisp true
hasMacros true
hasPrefixNotation true
 (+ 1 2)
hasBitWiseOperators true
 (& 0xFF 0x1B)
hasBooleans true
 (define open? #t)
hasLineComments true
 ; I am a comment
hasComments true
 ; I am a comment
hasBuiltInRegex true
 (regex-match? `[0-9]+` "Hello 12345")
 (regex-replace `Hello, (\w+)!$` "Hello, world!" "Goodbye, $1!")
hasNamespaces true
 (ns-create 'hello-world)
 (ns-define
   'hello-world
   'print
   (lambda ()
     (display "hello world!\n")))
 (hello-world::print)
canUseQuestionMarksAsPartOfIdentifier true
 (define yes? #t)
hasSemanticIndentation false
hasStrings true
 "hello world"
 `hello	wold`
