example
 def eager[R] { p: R / { Flip, Fail, Error } } = try {
   Success(p())
 } with Flip { () =>
   resume(true) match {
     case Failure(msg) => resume(false)
     case Success(res) => Success(res)
     case ParseError(msg) => ParseError(msg)
   }
 } with Fail { (msg) => Failure(msg)
 } with Error { (msg) => ParseError(msg) }
 

