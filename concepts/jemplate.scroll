 		<a href="[% kitty.link %]">
 			<div style="width: 240px; height: 240px; overflow:hidden;">
 						<img src="[% kitty.media.m %]" alt="[% kitty.title.replace('#.+','') | html %]" class="img-circle stretch">
 			</div>
 		</a>
 	</div>
 [% END %]
