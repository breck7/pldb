  long simple_add( long a, long b )
    {
      long sum;
        sum = a + b;
      return (sum);
    }
  endC
  
  // Define C function so FB can see it
  toolbox fn simple_add ( long a, long b ) = long
  
  // Create little program to add 2 + 2 with the C function
  
  window 1
  
