codeWithHeader Example from <b>1 languages</b>: <a href="../concepts/c.html">C</a>
 #include &lt;assert.h&gt;
 int i, a[10];
 for (i = 0; i &lt; 10; ++i)
   {
   assert(0 &lt;= i &amp;&amp; i &lt; 10);
   a[i] = 10-i;
   }
 for (i = 0; i &lt; 10; ++i)
   {
   assert(0 &lt;= i &amp;&amp; i &lt; 10);
   assert(0 &lt;= a[i] &amp;&amp; a[i] &lt; 10);
   a[a[i]] = a[i];
   }

