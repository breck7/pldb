codeWithHeader Example from <b>1 languages</b>: <a href="../concepts/jule.html">Jule</a>
 use std::debug
 use std::debug::assert::{assert}
 
 fn main() {
     std::debug::ENABLE = true
     let x = 200
     assert(x &lt; 200)
 }

codeWithHeader Example from <b>1 languages</b>: <a href="../concepts/speedie.html">Speedie</a>
 class Person
  |int| age
  setter age
   // &quot;expect&quot; will actually add an Error to a list of errors
   expect (value &gt;= 0) (&quot;bad age $value set!&quot;)
   .age = value
 
 main
  || p = person()
  p.age = -10
  if !stderr.ok
   &quot;Oof we got some errors&quot;

