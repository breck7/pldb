  compileInstance() {
   const id = this._getUid()
   const content = this.content === undefined ? "" : this.content
   return `<div class="scrollKatex" id="${id}">${content + this.childrenToString()}</div>`
  }
  compileTxt() {
    return ( this.content ? this.content : "" )+ this.childrenToString()
  }