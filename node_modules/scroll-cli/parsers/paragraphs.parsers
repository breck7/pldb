  compileSubparticles() {
    return this.map(particle => particle.compile())
     .join("\n")
     .trim()
  }
  compile() {
   return super.compile() + this.compileSubparticles()
  }
  compileTxt() {
    return this.getAtom(0) + " " + super.compileTxt()
