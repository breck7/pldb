  get code() {
   const { method } = this
   let code = ""
   
   let nodes = []
   let next = this[method]
   let {howMany} = this
   while (howMany) {
    nodes.push(next)
    next = next[method]
    howMany--
   }
   if (this.reverse) nodes.reverse()
   return nodes.map(node => node.asString).join("\n")
