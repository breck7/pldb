example
 package main
 
 import ui 
 
 type Context struct {
     input ui.TextBox
 }
 
 fn main() {
     wnd := ui.new_window(ui.WindowCfg{
         width: 600 
         height: 300 
         title: 'hello world' 
     }) 
     ctx := Context{
         input: ui.new_textbox(wnd) 
     }
     ctx.input.set_placeholder('Enter your name')
     btn := ui.new_button(wnd, 'Click me', ctx.btn_click)
     for {
         ui.wait_events()
     }
 }
 
 fn (ctx mut Context) btn_click() { 
     name := ctx.input.text()
     ctx.input.hide()
     ui.alert('Hello, $name!')
 }

