      .split(" ")
      .map(letter => pldbFolder.getFile(letter))
      .map((file: any) => {
        return {
          title: file.title,
          id: file.id,
          appeared: file.get("appeared"),
          rank: file.rank
        }
      })
    console.log(new TreeNode(results).asCsv)
  }

